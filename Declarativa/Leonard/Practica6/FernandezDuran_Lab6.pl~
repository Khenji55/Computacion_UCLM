%Ejercicio 22

p(X) :- q,r(X). t.
p(X) :- s(X),t. a.
q :- a,b. b :- fail.
q :- c,d. c.
r(uno). d.
s(dos).

%Ejercicio 23

add(X, L, L):- member(X,L), !.
add(X, L, [X|L]).

add2(X, L, L):- member(X,L).
add2(X, L, [X|L]).

%Ejercicio 24

diferente_a(X,Y) :- X=Y, !, fail; true.
diferente_b(X,Y):- not(X=Y).

